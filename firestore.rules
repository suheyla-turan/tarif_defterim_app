rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isRecipeOwner() {
      return isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    function isLikesOnlyUpdate() {
      return isAuthenticated()
        && request.writeFields.hasOnly(['likesCount'])
        && request.resource.data.ownerId == resource.data.ownerId;
    }

    // Kullanıcılar koleksiyonu
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Tarifler koleksiyonu
    match /recipes/{recipeId} {
      // Herkes okuyabilir
      allow read: if isAuthenticated();
      
      // Sadece sahibi yazabilir
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isRecipeOwner() || isLikesOnlyUpdate();
    }

    // Tarif beğenileri
    match /recipe_likes/{likeId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

  }
}

